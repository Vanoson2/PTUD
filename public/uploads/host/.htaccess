# Chỉ cho phép xem ảnh, không cho phép execute scripts
<FilesMatch "\.(jpg|jpeg|png|gif)$">
  Order Allow,Deny
  Allow from all
</FilesMatch>

# Deny all other files
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Disable directory listing
Options -Indexes
